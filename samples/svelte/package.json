{
  "name": "jss-svelte-sample",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "config": {
    "appName": "svelte-app",
    "rootPlaceholders": [
      "jss-main"
    ],
    "sitecoreDistPath": "/dist/svelte-app",
    "sitecoreConfigPath": "/App_Config/Include/zzz",
    "graphQLEndpointPath": "/api/svelte-app",
    "language": "en",
    "buildArtifactsPath": "./build"
  },
  "scripts": {
    "jss": "jss",
    "start": "npm-run-all --serial bootstrap:disconnected build:index --parallel start:svelte start:proxy start:watch-components",
    "start:ssr": "npm-run-all --serial bootstrap:disconnected build:index build:server --parallel start:svelte:ssr start:proxy start:watch-components",
    "bootstrap:disconnected": "node scripts/bootstrap.js --disconnected",
    "start:proxy": "node scripts/disconnected-mode-proxy.js",
    "start:watch-components": "node scripts/generate-component-factory.js --watch",
    "start:svelte": "run-p start:dev autobuild",
    "start:svelte:ssr": "run-p start:dev:ssr autobuild",
    "start:dev": "node server.js",
    "start:dev:ssr": "node server.js --static",
    "autobuild": "rollup -c -w",
    "start:connected": "scjss-verify-setup  && npm-run-all --serial bootstrap:connected build:index --parallel start:svelte start:watch-components",
    "start:connected:ssr": "scjss-verify-setup  && npm-run-all --serial bootstrap:connected build:index --parallel start:svelte:ssr start:watch-components",
    "build": "npm-run-all --serial bootstrap:connected build:index build:client build:server",
    "bootstrap:connected": "node scripts/bootstrap.js",
    "build:client": "cross-env-shell  \"rollup -c\"",
    "build:server": "cross-env-shell NODE_ENV=production \"rollup --config server/server.rollup.config.js\"",
    "scaffold": "node scripts/scaffold-component.js",
    "build:index": "cross-env-shell \"rollup --config index.rollup.config.js\" && node src/temp/generate-index.bundle.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "@sitecore-jss/sitecore-jss-cli": "^12.0.0",
    "@sitecore-jss/sitecore-jss-dev-tools": "^12.0.0",
    "@sitecore-jss/sitecore-jss-manifest": "^12.0.0",
    "cross-env": "^5.2.0",
    "express-history-api-fallback": "^2.2.1",
    "http-proxy-middleware": "^0.19.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.19.4",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-copy": "^2.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^1.0.1",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^4.0.4",
    "svelte": "^3.8.1"
  },
  "dependencies": {
    "@sitecore-jss/sitecore-jss": "^12.0.0",
    "@sitecore-jss/sitecore-jss-tracking": "^12.0.0",
    "apollo-boost": "^0.4.4",
    "apollo-client": "^2.6.4",
    "apollo-link-batch-http": "^1.2.12",
    "apollo-link-http": "^1.5.15",
    "cross-fetch": "^3.0.4",
    "es6-promise": "^4.2.8",
    "graphql": "^14.4.2",
    "jss-svelte": "^1.0.6",
    "node-fetch": "^2.6.0",
    "serialize-javascript": "^2.1.1",
    "svelte-routing": "git+https://github.com/erzr/svelte-routing.git"
  }
}
